<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:showIn="@layout/activity_collection_dash_board"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:weightSum="1"
        android:gravity="center_horizontal"
        android:background="#fcfafa">
        <TextView
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView4"
            android:layout_weight="0.09"
            android:gravity="center_horizontal"
            android:textIsSelectable="false"
            android:textStyle="bold" />
        <Button
            android:layout_width="250dp"
            android:layout_height="38dp"
            android:text="COLLECTION"
            android:id="@+id/col"
            android:layout_weight="0.09"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/collection"
            android:paddingStart="20dp"
            android:paddingEnd="25dp"
            android:background="@drawable/circular_btn"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />
        <Button
            android:layout_width="250dp"
            android:layout_height="38dp"
            android:text="Reports"
            android:id="@+id/report"
            android:layout_weight="0.09"
            android:textSize="20dp"
            android:textStyle="bold"
            android:paddingStart="20dp"
            android:paddingEnd="25dp"
            android:drawableStart="@drawable/reports"
            android:textColor="@color/white"
            android:visibility="visible"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/circular_btn"
            />
        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Upload Data (O/P)"
            android:id="@+id/upload"
            android:layout_weight="0.09"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="gone"
            android:textColor="@color/white"
            android:background="#6183c3"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" />
        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Download Data (I/P)"
            android:visibility="gone"
            android:id="@+id/download"
            android:layout_weight="0.09"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="#6183c3"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />
        <Button
            android:layout_width="250dp"
            android:layout_height="38dp"
            android:text="Printer Set Up"
            android:id="@+id/setup"
            android:layout_weight="0.09"
            android:textSize="20dp"
            android:textStyle="bold"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:drawableStart="@drawable/printer"
            android:background="@drawable/circular_btn"
            android:textColor="@color/white"
            android:layout_marginBottom="15dp" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Exit"
            android:id="@+id/exit"
            android:layout_weight="0.09"
            android:layout_marginTop="5dp"
            android:paddingStart="20dp"
            android:paddingEnd="25dp"
            android:drawableStart="@drawable/exit"
            android:background="@drawable/circular_btn"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>
</RelativeLayout>
