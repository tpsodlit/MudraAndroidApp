<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:showIn="@layout/activity_ac_collection"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.collection.tpwodloffline.activity.AcCollection">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchtyp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bill Payment"
            android:id="@+id/bill"
            android:checked="true"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginBottom="9dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Additional Security Deposit"
            android:id="@+id/asd"
            android:checked="false"
            android:textStyle="bold"
            android:visibility="gone"
            android:textSize="20dp"
            android:layout_marginBottom="9dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Advance Payment"
            android:id="@+id/advpay"
            android:checked="false"
            android:textStyle="bold"
            android:visibility="gone"
            android:textSize="20dp"
            android:layout_marginBottom="9dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reconnection Fee"
            android:id="@+id/rcf"
            android:checked="false"
            android:textStyle="bold"
            android:visibility="gone"
            android:textSize="20dp"
            android:layout_marginBottom="9dp" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assesment Bill"
            android:id="@+id/assmnt"
            android:checked="false"
            android:textStyle="bold"
            android:visibility="gone"
            android:textSize="20dp"
            android:layout_marginBottom="9dp" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reprint Receipt"
            android:id="@+id/DRecpt"
            android:checked="false"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginBottom="9dp" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duplicate Receipt"
                android:id="@+id/DRecptr"
                android:checked="false"
                android:textStyle="bold"
                android:enabled="false"
                android:visibility="gone"
                android:textSize="20dp"
                android:layout_marginBottom="9dp" />
        </RadioGroup>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textCapSentences"
            android:id="@+id/consno"
            android:layout_marginTop="6dp"
            android:layout_gravity="center_horizontal"
            android:hint="Consumer no.(12 digits)"
            android:textStyle="bold"
            android:maxLength="12"
            android:textSize="18dp"

            android:layout_marginBottom="9dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:background="@drawable/circular_btn"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />
</RelativeLayout>
