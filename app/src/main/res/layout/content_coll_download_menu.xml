<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:showIn="@layout/activity_coll_download_menu"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"

    tools:context="com.collection.tpwodloffline.CollDownloadMenuActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <Button
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="DOWNLOAD FILE"
            android:id="@+id/DwnldText"
            android:background="#6183c3"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:textSize="20dp" />

        <Button
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="DOWNLOAD FILE GPRS"
            android:id="@+id/DwldGprs"
            android:background="#6183c3"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:textSize="20dp" />

        <Button
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="DOWNLOAD ADDITIONAL FILE GPRS"
            android:id="@+id/DwldGprsAdd"
            android:background="#6183c3"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textSize="20dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:id="@+id/Back"
            android:background="#6183c3"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>
</RelativeLayout>
