<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Printing To be started"
        android:id="@+id/PrntMsg"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/ReprntRcpt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PrntMsg"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="85dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="99dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/circular_btn"
        android:text="Print Receipt"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="22dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Exit"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ReprntRcpt"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="86dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/circular_btn"
        android:text="@string/back"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/scan"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ReprntRcpt"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="86dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/circular_btn"
        android:text="@string/scan"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:id="@+id/contd"
        android:visibility="gone"
        android:layout_alignTop="@+id/Exit"
        android:layout_alignRight="@+id/PrntMsg"
        android:layout_alignEnd="@+id/PrntMsg"
        android:background="#6183c3"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginLeft="10dp" />
</RelativeLayout>